# Backend Environment Variables Template
# Copy this to .env and fill in your actual values

# reCAPTCHA Secret Key (get from Google reCAPTCHA admin)
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here

# Gmail credentials for sending emails
# Use Gmail App Password, not your regular password
# Generate at: https://myaccount.google.com/apppasswords
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_gmail_app_password_here

# Allowed origins for CORS (comma-separated, no spaces after commas)
# Add all your frontend domains here
ALLOWED_ORIGIN=http://localhost:5173,https://yourdomain.com,https://www.yourdomain.com

# Port (optional, defaults to 3001)
PORT=3001
